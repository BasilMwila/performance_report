<svg viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect x="0" y="0" width="800" height="600" fill="#f8f9fa" rx="10" ry="10"/>
  
  <!-- Title -->
  <text x="400" y="40" font-family="Arial, sans-serif" font-size="24" text-anchor="middle" font-weight="bold">Moisture Sensor System for Shantuka Village</text>
  
  <!-- Field Layout -->
  <rect x="50" y="100" width="300" height="300" fill="#c8e6c9" stroke="#4caf50" stroke-width="2"/>
  <text x="200" y="90" font-family="Arial, sans-serif" font-size="16" text-anchor="middle">1-Hectare Field (100m x 100m)</text>
  
  <!-- Moisture Sensors -->
  <circle cx="100" cy="150" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <circle cx="100" cy="250" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <circle cx="100" cy="350" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <circle cx="200" cy="150" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <circle cx="200" cy="250" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <circle cx="200" cy="350" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <circle cx="300" cy="150" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <circle cx="300" cy="250" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <circle cx="300" cy="250" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  
  <!-- Sensors Legend -->
  <circle cx="60" cy="430" r="8" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5"/>
  <text x="75" y="435" font-family="Arial, sans-serif" font-size="14" text-anchor="start">Moisture Sensors (8 total)</text>
  
  <!-- Arduino & Multiplexer System -->
  <rect x="450" y="120" width="300" height="280" fill="#f5f5f5" stroke="#9e9e9e" stroke-width="2" rx="10" ry="10"/>
  <text x="600" y="145" font-family="Arial, sans-serif" font-size="18" text-anchor="middle" font-weight="bold">Control System</text>
  
  <!-- Arduino -->
  <rect x="480" y="170" width="120" height="80" fill="#00979c" stroke="#007580" stroke-width="2" rx="5" ry="5"/>
  <text x="540" y="210" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" fill="white">Arduino Mega</text>
  
  <!-- Multiplexer -->
  <rect x="650" y="170" width="80" height="80" fill="#ff9800" stroke="#ef6c00" stroke-width="2" rx="5" ry="5"/>
  <text x="690" y="210" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="white">CD74HC4067</text>
  <text x="690" y="230" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="white">Multiplexer</text>
  
  <!-- Connection Lines -->
  <line x1="600" y1="210" x2="650" y2="210" stroke="#212121" stroke-width="2"/>
  
  <!-- ESP8266 -->
  <rect x="480" y="290" width="120" height="60" fill="#03a9f4" stroke="#0277bd" stroke-width="2" rx="5" ry="5"/>
  <text x="540" y="320" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="white">ESP8266</text>
  <text x="540" y="340" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="white">WiFi Module</text>
  
  <!-- Valve Controller -->
  <rect x="650" y="290" width="80" height="60" fill="#9c27b0" stroke="#6a1b9a" stroke-width="2" rx="5" ry="5"/>
  <text x="690" y="320" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="white">Relay Board</text>
  <text x="690" y="340" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="white">Valve Control</text>
  
  <!-- System Diagram -->
  <rect x="100" y="470" width="600" height="100" fill="#e3f2fd" stroke="#1976d2" stroke-width="2" rx="5" ry="5"/>
  <text x="400" y="490" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" font-weight="bold">System Architecture</text>
  
  <!-- System Architecture Flow -->
  <rect x="150" y="510" width="100" height="40" fill="#2196f3" stroke="#0d47a1" stroke-width="1.5" rx="5" ry="5"/>
  <text x="200" y="535" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="white">Soil Moisture</text>
  
  <line x1="250" y1="530" x2="290" y2="530" stroke="#212121" stroke-width="1.5" marker-end="url(#arrow)"/>
  
  <rect x="290" y="510" width="100" height="40" fill="#ff9800" stroke="#e65100" stroke-width="1.5" rx="5" ry="5"/>
  <text x="340" y="535" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="white">Multiplexer</text>
  
  <line x1="390" y1="530" x2="430" y2="530" stroke="#212121" stroke-width="1.5" marker-end="url(#arrow)"/>
  
  <rect x="430" y="510" width="100" height="40" fill="#00979c" stroke="#007580" stroke-width="1.5" rx="5" ry="5"/>
  <text x="480" y="535" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="white">Arduino</text>
  
  <line x1="530" y1="530" x2="570" y2="530" stroke="#212121" stroke-width="1.5" marker-end="url(#arrow)"/>
  
  <rect x="570" y="510" width="100" height="40" fill="#03a9f4" stroke="#0277bd" stroke-width="1.5" rx="5" ry="5"/>
  <text x="620" y="535" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="white">Cloud Data</text>
  
  <!-- Arrow Marker -->
  <defs>
    <marker id="arrow" markerWidth="10" markerHeight="10" refX="9" refY="3" orient="auto" markerUnits="strokeWidth">
      <path d="M0,0 L0,6 L9,3 z" fill="#212121"/>
    </marker>
  </defs>
</svg>